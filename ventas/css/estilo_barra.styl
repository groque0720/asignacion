.titulo
	height 40px
	border-radius 10px
	padding 3px
	background #000
	box-shadow 2px 2px 3px #C0C0C0
	
	.bus_cab, .noti_iconos, .logo_dyv
		float left
		height 25px
		display inline-block
		padding 2px 2px 0 2px
				
	.bus_cab
		display none
		margin 6px
		background white
		border-radius 5px
						
		input 
			margin-top 2px
			border none
			padding 0px 10px
			font-size 102%
			
			&:focus
				outline 0
			
		.box_btn_bus
			
			float right
			margin 4px 


			a	
				text-decoration none
				color #A9AB9A
								
				&:after
					
					font-family "iconitos"
					content "\e600"
	.estado
		color white
		
	.noti_iconos
		float right	
		height 30px
		margin 3px
		
		
		.noti
			display inline-block
			height 20px
			margin-right 7px
			position relative
			width 25px
			&:hover
				cursor pointer

			.box_imagen
				position absolute
				top 2px
				
				img 
					width 120%
					// opacity .5

			.cantidad
				right -5px
				bottom -10px
				text-shadow 1px 1px 4px #000000
				border-radius 50%
				color #FFFFFF
				font-size 100%
				font-weight bold
				padding 1px
				position absolute
				z-index 1
						
	.logo_dyv
		margin 3px
		padding-top 3px
		border-radius 45%
						
		.box_imagen_logo
			margin-top -4px
			
			img
				width 35px